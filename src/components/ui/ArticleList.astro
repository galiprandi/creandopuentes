---
import { template } from '@/settings'

interface Props {
  listTitle: string;
  listItems: {
    title: string;
    journal: string;
    time: string;
    id?: string;
    link?: string;
  }[];
}
const {listTitle, listItems} = Astro.props
---

<h2 class='text-3xl font-bold mb-8'>{listTitle}</h2>
		<div class='space-y-6'>
			{
				listItems.map(item => (
					<div class='p-6 rounded-lg text-base-content bg-base-200'>
						<div class='flex justify-between items-center'>
							<div>
								<h3 class='text-xl font-semibold mb-2'>{item.title}</h3>
								<p>
									{item.journal} • {item.time}
								</p>
							</div>
							{item.id && (
								<a href={`/blog/${item.id}`} class='btn btn-sm btn-secondary text-secondary-content'>
									Leer más
								</a>
							)}
							{item.link && (
								<a href={item.link} class='btn btn-sm btn-secondary text-secondary-content' target="_blank" rel="noopener noreferrer">
									Leer paper
								</a>
							)}
						</div>
					</div>
				))
			}
		</div>
